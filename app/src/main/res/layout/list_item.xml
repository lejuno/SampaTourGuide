<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/photoImageView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter" />

            <TextView
                android:id="@+id/titleTextView"
                style="@style/styleCardTitle" />

            <TextView
                android:id="@+id/descriptionTextView"
                style="@style/styleDescription" />

            <TextView
                android:id="@+id/webPageTextView"
                style="@style/styleWorkingHours"
                android:autoLink="web"
                android:drawableLeft="@drawable/ic_link_black_24dp"
                android:linksClickable="true" />

            <TextView
                android:id="@+id/addressTextView"
                style="@style/styleWorkingHours"
                android:autoLink="map"
                android:drawableLeft="@drawable/ic_location_on_black_24dp" />

            <TextView
                android:id="@+id/scheduleTextView"
                style="@style/styleWorkingHours"
                android:drawableLeft="@drawable/ic_schedule_black_24dp" />

            <TextView
                android:id="@+id/priceTextView"
                style="@style/styleWorkingHours"
                android:drawableLeft="@drawable/ic_attach_money_black_24dp" />

            <TextView
                android:id="@+id/phoneTextView"
                style="@style/styleWorkingHours"
                android:autoLink="phone"
                android:drawableLeft="@drawable/ic_phone_black_24dp" />
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
